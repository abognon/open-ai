{
    "name": "abognon/open-ai",
    "description": "OpenAI GPT-3 Api Client in PHP",
    "keywords": [
        "abognon",
        "open-ai"
    ],
    "homepage": "https://github.com/abognon/open-ai",
    "license": "MIT",
    "authors": [
        {
            "name": "Ulrich Abognon",
            "email": "uabognon.95@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Abognon\\OpenAi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Abognon\\OpenAi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
